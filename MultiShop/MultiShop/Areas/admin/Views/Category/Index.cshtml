@model List<GetCategoryVM>;

<div class="card-body p-4">
    <h5 class="card-title fw-semibold mb-4">Sliders</h5>
    <a type="button " asp-controller="Category" asp-action="Create" class="btn btn-outline-success m-1">Create</a>
    <div class="table-responsive">
        <table class="table table-bordered text-nowrap mb-0 align-middle">
            <thead class="text-dark fs-4">
                <tr>
                    <th class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">Id</h6>
                    </th>
                    
                    <th class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">Name</h6>
                    </th>
                    <th class="border-bottom-0">
                        <h6 class="fw-semibold mb-0">Action</h6>
                    </th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                <tr>
                <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.Id</h6>
                </td>

                <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">@item.CategoryName</h6>
                </td>
                <td>


                            <a type="button" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-danger m-1">Edit</a>
                            <a type="button" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-danger m-1">DELETE</a>
                            @*       <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warring">Edit</a>
                        <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-warring">Delete</a> *@
                </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>